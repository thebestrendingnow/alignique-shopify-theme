<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>{{ shop.name }}</title>
  
  {{ content_for_header }}
  
  <style>
    /* FORCE BLACK BACKGROUND */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    html, body {
      width: 100%;
      height: 100%;
      background-color: #000000 !important;
      background: #000000 !important;
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
      color: #FFFFFF !important;
    }
    
    body {
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      padding: 20px;
    }
    
    .password-container {
      max-width: 500px;
      width: 100%;
      background: rgba(0, 0, 0, 0.95);
      border: 2px solid #FFD700;
      border-radius: 12px;
      padding: 40px;
      box-shadow: 0 0 40px rgba(255, 215, 0, 0.3);
      text-align: center;
    }
    
    .logo {
      margin-bottom: 30px;
    }
    
    .logo img {
      max-width: 200px;
      height: auto;
      filter: brightness(1.2);
    }
    
    h1 {
      color: #FFFFFF;
      font-size: 32px;
      margin-bottom: 10px;
      font-weight: 700;
    }
    
    p {
      color: rgba(255, 255, 255, 0.8);
      font-size: 16px;
      margin-bottom: 30px;
      line-height: 1.6;
    }
    
    .password-form {
      margin: 30px 0;
    }
    
    .form-group {
      margin-bottom: 20px;
    }
    
    label {
      display: block;
      color: #FFFFFF;
      font-size: 14px;
      margin-bottom: 8px;
      text-align: left;
      font-weight: 500;
    }
    
    input[type="password"],
    input[type="text"] {
      width: 100%;
      padding: 14px;
      background-color: rgba(255, 255, 255, 0.1);
      border: 1px solid #FFD700;
      border-radius: 6px;
      color: #FFFFFF;
      font-size: 16px;
      transition: all 0.3s ease;
    }
    
    input[type="password"]:focus,
    input[type="text"]:focus {
      outline: none;
      border-color: #FFC700;
      background-color: rgba(255, 255, 255, 0.15);
      box-shadow: 0 0 0 3px rgba(255, 215, 0, 0.1);
    }
    
    input::placeholder {
      color: rgba(255, 255, 255, 0.5);
    }
    
    button[type="submit"],
    .button {
      width: 100%;
      padding: 14px 24px;
      background-color: #FFD700;
      color: #000000;
      border: none;
      border-radius: 6px;
      font-size: 16px;
      font-weight: 700;
      cursor: pointer;
      transition: all 0.3s ease;
      text-transform: uppercase;
      letter-spacing: 1px;
    }
    
    button[type="submit"]:hover,
    .button:hover {
      background-color: #FFC700;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(255, 215, 0, 0.4);
    }
    
    .error {
      background-color: rgba(255, 107, 107, 0.1);
      border: 1px solid #FF6B6B;
      color: #FF6B6B;
      padding: 12px;
      border-radius: 6px;
      margin-bottom: 20px;
      font-size: 14px;
    }
    
    .footer {
      margin-top: 30px;
      padding-top: 20px;
      border-top: 1px solid rgba(255, 215, 0, 0.2);
    }
    
    .social-links {
      display: flex;
      justify-content: center;
      gap: 15px;
      margin-top: 20px;
    }
    
    .social-links a {
      color: #FFD700;
      font-size: 24px;
      transition: all 0.3s ease;
    }
    
    .social-links a:hover {
      color: #FFC700;
      transform: scale(1.2);
    }
    
    .powered-by {
      margin-top: 20px;
      font-size: 12px;
      color: rgba(255, 255, 255, 0.5);
    }
    
    @media (max-width: 600px) {
      .password-container {
        padding: 30px 20px;
      }
      
      h1 {
        font-size: 24px;
      }
      
      p {
        font-size: 14px;
      }
    }
  </style>
</head>

<body>
  {{ content_for_layout }}
  <div class="password-container">
    {% if shop.password_message != blank %}
      <div class="logo">
        {% if settings.logo %}
          <img src="{{ settings.logo | image_url: width: 200 }}" alt="{{ shop.name }}">
        {% else %}
          <h1>{{ shop.name }}</h1>
        {% endif %}
      </div>
      
      <h1>Coming Soon</h1>
      <p>{{ shop.password_message }}</p>
    {% else %}
      <div class="logo">
        {% if settings.logo %}
          <img src="{{ settings.logo | image_url: width: 200 }}" alt="{{ shop.name }}">
        {% else %}
          <h1>{{ shop.name }}</h1>
        {% endif %}
      </div>
      
      <h1>Enter Store</h1>
      <p>Enter the password to access our store</p>
    {% endif %}
    
    {% form 'storefront_password' %}
      <div class="password-form">
        {% if form.errors %}
          <div class="error">
            {{ form.errors | default_errors }}
          </div>
        {% endif %}
        
        <div class="form-group">
          <label for="password">Password</label>
          <input 
            type="password" 
            id="password" 
            name="password" 
            placeholder="Enter password"
            autofocus
          >
        </div>
        
        <button type="submit">Enter Store</button>
      </div>
    {% endform %}
    
    <div class="footer">
      {% if shop.password_message == blank %}
        <p style="font-size: 14px; color: rgba(255,255,255,0.7);">
          Store owner? <a href="/admin" style="color: #FFD700;">Login here</a>
        </p>
      {% endif %}
      
      <div class="powered-by">
        Powered by Shopify
      </div>
    </div>
  </div>
</body>
</html>
