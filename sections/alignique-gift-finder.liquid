<style>
.alignique-gift-finder {
  background: #000;
  padding: 80px 20px;
  position: relative;
}

.alignique-gift-finder::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(90deg, transparent, #D4AF37, transparent);
}

.alignique-gf-container {
  max-width: 1400px;
