}

.alignique-gf-header {
  text-align: center;
  margin-bottom: 60px;
}

.alignique-gf-title {
  font-size: 3rem;
  font-weight: 800;
  background: linear-gradient(135deg, #D4AF37 0%, #F59E0B 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 20px;
}

.alignique-gf-subtitle {
  font-size: 1.2rem;
  color: #9CA3AF;
}

.alignique-zodiac-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 20px;
  margin-bottom: 60px;
}

.alignique-zodiac-card {
  background: linear-gradient(135deg, rgba(212, 175, 55, 0.05) 0%, rgba(139, 92, 246, 0.05) 100%);
  border: 1px solid rgba(212, 175, 55, 0.2);
  border-radius: 15px;
  padding: 30px 20px;
  text-align: center;
  cursor: pointer;
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
}

.alignique-zodiac-card::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(212, 175, 55, 0.1) 0%, transparent 70%);
  opacity: 0;
  transition: opacity 0.3s;
}

.alignique-zodiac-card:hover {
  transform: translateY(-5px);
  border-color: #D4AF37;
  box-shadow: 0 10px 30px rgba(212, 175, 55, 0.3);
}

.alignique-zodiac-card:hover::before {
  opacity: 1;
}

.alignique-zodiac-icon {
  font-size: 3rem;
  margin-bottom: 15px;
}

.alignique-zodiac-name {
  font-size: 1.2rem;
  font-weight: 600;
  color: #D4AF37;
  margin-bottom: 5px;
}

.alignique-zodiac-dates {
  font-size: 0.9rem;
  color: #6B7280;
}

.alignique-ai-finder {
  background: linear-gradient(135deg, rgba(212, 175, 55, 0.1) 0%, rgba(139, 92, 246, 0.1) 100%);
  border: 2px solid #D4AF37;
  border-radius: 20px;
  padding: 50px 30px;
  text-align: center;
}

.alignique-ai-title {
  font-size: 2rem;
  color: #D4AF37;
  margin-bottom: 20px;
}

.alignique-ai-desc {
  color: #9CA3AF;
  margin-bottom: 30px;
  font-size: 1.1rem;
}

.alignique-ai-button {
  display: inline-block;
  background: linear-gradient(135deg, #D4AF37 0%, #F59E0B 100%);
  color: #000;
  padding: 18px 50px;
  font-size: 1.2rem;
  font-weight: 700;
  border-radius: 50px;
  text-decoration: none;
  box-shadow: 0 10px 30px rgba(212, 175, 55, 0.4);
  transition: all 0.3s;
  border: none;
  cursor: pointer;
}

.alignique-ai-button:hover {
  transform: translateY(-3px);
  box-shadow: 0 15px 40px rgba(212, 175, 55, 0.6);
}

/* Mobile */
@media (max-width: 768px) {
  .alignique-gf-title {
    font-size: 2rem;
  }
  
  .alignique-zodiac-grid {
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 15px;
  }
  
  .alignique-zodiac-card {
    padding: 20px 15px;
  }
  
  .alignique-zodiac-icon {
    font-size: 2rem;
  }
  
  .alignique-ai-finder {
    padding: 30px 20px;
  }
  
  .alignique-ai-title {
